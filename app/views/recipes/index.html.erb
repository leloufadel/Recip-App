<!DOCTYPE html>
<html>
<head>
  <%= stylesheet_link_tag 'navbar' %>
  <%= stylesheet_link_tag 'index' %> 
</head>
<body>
  <%= render 'shared/navbar' %>
  <div class="container">
    <div class="content-box">
      <h1>Welcome To Recipe Page</h1>

      <%= link_to 'Add New Recipe', new_recipe_path, class: 'btn btn-primary' %>

      <ul>
        <% @recipes.each do |recipe| %>
          <li class="recipe-item">
            <p class="recipe-name"><%= recipe.name %></p>
            <p>Description: <%= recipe.description %></p>
            <a href="<%= recipe_path(recipe) %>"></a>
            <% if can? :destroy, recipe %>
              <%= form_with model: recipe, url: recipe_path(recipe), method: :delete, data: { confirm: 'Are you sure you want to delete this recipe?' } do |f| %>
                <span><%= f.submit "Delete", class: "delete-button" %></span>
              <% end %>
            <% end %>
          </li> <!-- Closing </li> tag for each recipe item -->
        <% end %>
      </ul>
    </div>
  </div>
</body>
</html>
