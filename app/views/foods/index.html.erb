<div class="container">
  <h2>Food List</h2>

  <% if @foods.any? %>
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Measurement Unit</th>
          <th>Price</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @foods.each do |food| %>
          <tr>
            <td><%= food.name %></td>
            <td><%= food.measurement_unit %></td>
            <td><%= number_to_currency(food.price) %></td>
            <td>
              <%= link_to 'Show', food_path(food), class: 'btn btn-info btn-sm' %>
              <%= link_to 'Delete', food_path(food), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% else %>
    <p>No food items available.</p>
  <% end %>

  <%= link_to 'New Food', new_food_path, class: 'btn btn-primary' %>
</div>
